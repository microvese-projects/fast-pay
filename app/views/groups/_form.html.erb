<div class='form-container'>
  <%= form_with(model: group, url: user_groups_path(current_user)) do |form| %>
    <% if group.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

        <ul>
          <% group.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, placeholder: 'Name of Group' %>
    </div>

    <div>
      <%= form.label :icon, style: "display: block" %>
      <%= form.text_field :icon, placeholder: 'Link to icon' %>
    </div>

    <div class='actions'>
      <%= form.submit %>
    </div>
  <% end %>

</div>